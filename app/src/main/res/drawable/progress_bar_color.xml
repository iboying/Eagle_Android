<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8.0dip" />
            <gradient android:startColor="#EEEEEE" android:endColor="#EEEEEE"
                      android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="@color/signInBackgroundColor" android:endColor="@color/signInBackgroundColor"
                          android:centerColor="@color/signInBackgroundColor" android:angle="270.0" />
            </shape>
        </clip>
    </item>

</layer-list>